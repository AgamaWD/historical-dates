include ../dates-slider/dates-slider.pug
include ../tabs-block/tabs-block.pug

mixin hd-main()

    section.hd-main(data-js="hdMain")
        .hd-container
            .hd-main__content
                .hd-main__title Планеты <br>Солнечной <br>системы
                +tabs-block({
                    classes: 'hd-main__tabs',
                })
                    .swiper-slide.tabs-block__slide
                        +dates-slider

                    .swiper-slide.tabs-block__slide
                        +dates-slider({ 
                            slides: [
                                {
                                    title: 'Адская жара',
                                    text: 'Средняя температура +460°C из-за густой атмосферы (96% CO₂) и парникового эффекта; давление как на 900 м под водой; поверхность — вулканы и лавовые равнины.',
                                },
                                {
                                    title: 'Обратное вращение',
                                    text: 'Вращается против часовой стрелки, сутки — 243 земных дня (дольше года в 225 дней).',
                                },
                                {
                                    title: 'Сестра Земли',
                                    text: 'Похожа по размеру, но без океанов; "Венера-13" (Советский зонд - 1 марта 1982 года успешно приземлился на поверхность Венеры) передал цветные фото почвы с поверхности: оранжево-коричневые камни и песок.',
                                } 
                            ]
                        })

                    .swiper-slide.tabs-block__slide
                        +dates-slider({
                            slides: [
                                {
                                title: 'Жидкая жизнь',
                                text: 'Единственная с океанами (71% поверхности) и кислородной атмосферой (21% O₂); магнитное поле защищает от солнечного ветра.'
                                },
                                {
                                title: 'Стабильная Луна',
                                text: 'Спутник Луна (384 тыс. км) стабилизирует seasons; сутки — 24 часа, год — 365,25 дней.'
                                },
                                {
                                title: 'Плитный танец',
                                text: 'Тектоника плит формирует континенты через землетрясения и вулканы; самая плотная (5,51 г/см³) из-за железного ядра.'
                                }
                            ]
                        })

                    .swiper-slide.tabs-block__slide
                        +dates-slider({
                            slides: [
                                {
                                title: 'Красная ржавчина',
                                text: 'Цвет от оксида железа; спутники Фобос и Деймос — бывшие астероиды; день — 24,6 часа.'
                                },
                                {
                                title: 'Гигант Олимп',
                                text: 'Гора Олимп (22 км) в 2,5 раза выше Эвереста; полярные шапки — CO₂ и вода, пылевые бури скрывают планету.'
                                },
                                {
                                title: 'Поиск микробов',
                                text: 'Тонкая атмосфера (95% CO₂, -60°C); Perseverance (с 2021) ищет древнюю жизнь и производит кислород.'
                                }
                            ]
                        })

                    .swiper-slide.tabs-block__slide
                        +dates-slider({
                            slides: [
                                {
                                title: 'Гигант системы',
                                text: 'Масса в 318 раз Земли, 79+ спутников (Европа с океаном); день — 10 часов, год — 11,86 лет.'
                                },
                                {
                                title: 'Красное пятно',
                                text: 'Антициклон размером с Землю бушует 400+ лет; слабые кольца, гравитация отбивает астероиды.'
                                },
                                {
                                title: 'Турбулентные облака',
                                text: 'Juno (с 2016) показал штормы быстрее звука; планета сжимается под собственной массой.'
                                }
                            ]
                        })

                    .swiper-slide.tabs-block__slide
                        +dates-slider({
                            slides: [
                                {
                                title: 'Кольца-шедевр',
                                text: 'Ширина 282 тыс. км, толщина 10-100 м (лёд/пыль); 82+ спутника, Титан с метановыми озёрами.'
                                },
                                {
                                title: 'Плавучий гигант',
                                text: 'Плотность 0,69 г/см³ — плавает в воде; день — 10,5 ч, год — 29,5 лет; шестиугольник на полюсе — 30 км.'
                                },
                                {
                                title: 'Вода из Энцелада',
                                text: 'Кассини открыл плюмы из спутника — потенциал жизни; Титан как ранняя Земля с жидкостями.'
                                }
                            ]
                        })

                    .swiper-slide.tabs-block__slide
                        +dates-slider({
                            slides: [
                                {
                                title: 'Наклон на боку',
                                text: 'Ось 98° от удара; сезоны по 21 году; -224°C, голубой от метана.'
                                },
                                {
                                title: 'Ретроградный день',
                                text: '17 часов вращения, год — 84 года; 27 спутников, 13 колец; магнитное поле на 59°.'
                                },
                                {
                                title: 'Алмазный дождь',
                                text: 'Voyager-2 (1986) увидел облака; под давлением углерод → алмазы, тепло в 1,3 раза > солнечного.'
                                }
                            ]
                        })

                    .swiper-slide.tabs-block__slide
                        +dates-slider({
                            slides: [
                                {
                                title: 'Суперветры',
                                text: 'До 2100 км/ч — рекорд; тёмно-синий от метана, Тёмное Пятно как на Юпитере.'
                                },
                                {
                                title: 'Тритон-гейзер',
                                text: '14 спутников, Тритон с азотными вулканами и ретроградной орбитой; день — 16 ч, год — 164,8 лет.'
                                },
                                {
                                title: 'Быстрое открытие',
                                text: '1846 год, за 23 дня после расчётов; Voyager-2 (1989) снял гейзеры на Тритоне до 8 км.'
                                }
                            ]
                        })